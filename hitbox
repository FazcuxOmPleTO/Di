_G.ArmSize = 3
_G.Disabled = true

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

game:GetService("RunService").RenderStepped:Connect(function()
	if _G.Disabled then
		for _, plr in ipairs(Players:GetPlayers()) do
			if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("Humanoid") then
				for _, nome in ipairs({
					"LeftUpperArm", "LeftLowerArm", "LeftHand",
					"RightUpperArm", "RightLowerArm", "RightHand"
				}) do
					local part = plr.Character:FindFirstChild(nome)
					if part then
						pcall(function()
							-- Aumenta hitbox real
							part.Size = Vector3.new(_G.ArmSize, _G.ArmSize, _G.ArmSize)
							part.CanCollide = false
							part.Transparency = 1

							-- Cria mesh visual falsa do tamanho original
							if not part:FindFirstChild("VisualFix") then
								local mesh = Instance.new("SpecialMesh")
								mesh.Name = "VisualFix"
								mesh.MeshType = Enum.MeshType.Brick
								mesh.Scale = Vector3.new(1 / _G.ArmSize, 1 / _G.ArmSize, 1 / _G.ArmSize)
								mesh.Parent = part
							end
						end)
					end
				end
			end
		end
	end
end)
